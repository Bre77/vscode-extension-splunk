{
	"name": "Splunk",
	"fileTypes": ["conf", "spec", "default.meta", "local.meta"],
	"scopeName": "source.splunk",
	"patterns": [
		{"include": "#warning"},
		{"include": "#comment"},
		{"include": "#stanza"},
		{"include": "#setting"},
		{"include": "source.json"}
	],
	"repository": {
		"warning":{
			"comment": "Looks for the text '# DO NOT EDIT THIS FILE'.",
			"match": "^# DO NOT EDIT THIS FILE\\!$",
			"name": "invalid.illegal"
		},
		"comment": {
			"comment": "Any lines that start with '#' are marked as a comment.",
			"begin": "^#",
			"end": "\\n",
			"name": "comment.splunk"
		},
		"stanza": {
			"comment": "Matches '[stanzas]'.",
			"begin": "^\\[",
			"end": "\\]",
			"name": "entity.splunk"
		},
		"setting": {
			"comment": "Matches 'setting = value'.",
			"captures": {
				"1": {
					"name": "support.type.property-name.splunk"
				},
				"2": {
					"name": "punctuation.separator.splunk"
				},
				"3": {
					"name": "string.quoted.double.splunk"
				}
			},
			"match": "\\b([a-zA-Z0-9,_.-]+)\\b\\s*(=)\\s*(.*)$"
		}
	}
}