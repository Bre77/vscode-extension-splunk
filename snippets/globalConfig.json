{
    "generate-template": {
        "description": "Create a globalConfig.json template.",
        "prefix": "generate-template",
        "body": [
            "{",
            "\"meta\": {",
            "        \"name\": \"${1:name}\",",
            "        \"displayName\": \"${2:display name}\",",
            "        \"version\": \"${3:0.0.0}\",",
            "        \"restRoot\": \"${1}\"",
            "    },",
            "    \"pages\": {",
            "        \"configuration\": {",
            "            \"title\": \"Configuration\",",
            "            \"description\": \"Set up your add-on\",",
            "            \"tabs\": [",
            "                $0",
            "            ]",
            "        },",
            "        \"inputs\": {",
            "            \"title\": \"Inputs\",",
            "            \"description\": \"Manage your data inputs\",",
            "            \"services\": [",
            "                ",
            "            ],",
            "            \"table\": {",
            "                \"actions\": [",
            "                    \"edit\",",
            "                    \"enable\",",
            "                    \"delete\",",
            "                    \"clone\"",
            "                ],",
            "            \"header\": [",
            "               {",
            "                   \"field\": \"name\",",
            "                   \"label\": \"Name\"",
            "               },",
            "               {",
            "                   \"field\": \"interval\",",
            "                   \"label\": \"Interval\"",
            "               },",
            "               {",
            "                   \"field\": \"index\",",
            "                   \"label\": \"Index\"",
            "               },",
            "               {",
            "                   \"field\": \"disabled\",",
            "                   \"label\": \"Status\"",
            "               }",
            "           ],",
            "                \"moreInfo\": [",
            "                    ",
            "                ]",
            "            }",
            "        }",
            "    }",
            "}"
          ]
    },
    "tab-account": {
        "prefix": "tab-account",
        "description": "Create a Global Account tab.",
        "body": [
            "{",
            "    \"name\": \"account\",",
            "    \"title\": \"Account\",",
            "    \"table\": {",
            "        \"header\": [",
            "            {",
            "                \"field\": \"name\",",
            "                \"label\": \"Account name\"",
            "            },",
            "            {",
            "                \"field\": \"username\",",
            "                \"label\": \"Username\"",
            "            }",
            "        ],",
            "        \"actions\": [",
            "            \"edit\",",
            "            \"delete\",",
            "            \"clone\"",
            "        ]",
            "    },",
            "    \"entity\": [",
            "        {",
            "            \"field\": \"name\",",
            "            \"label\": \"Account name\",",
            "            \"type\": \"text\",",
            "            \"required\": true,",
            "            \"help\": \"Enter a unique name for this account.\",",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"string\",",
            "                    \"minLength\": 1,",
            "                    \"maxLength\": 50,",
            "                    \"errorMsg\": \"Length of Account name should be between 1 and 50\"",
            "                },",
            "                {",
            "                    \"type\": \"regex\",",
            "                    \"pattern\": \"^[a-zA-Z]\\\\\\w*$\",",
            "                    \"errorMsg\": \"Account name must start with a letter and followed by alphabetic letters, digits or underscores.\"",
            "                }",
            "            ]",
            "        },",
            "        {",
            "            \"field\": \"username\",",
            "            \"label\": \"Username\",",
            "            \"type\": \"text\",",
            "            \"required\": true,",
            "            \"help\": \"Enter the username for this account.\",",
            "            \"options\": {",
            "                \"placeholder\": \"Enter the username here\"",
            "            },",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"string\",",
            "                    \"minLength\": 1,",
            "                    \"maxLength\": 200,",
            "                    \"errorMsg\": \"Length of username should be between 1 and 200\"",
            "                }",
            "            ]",
            "        },",
            "        {",
            "            \"field\": \"password\",",
            "            \"label\": \"Password\",",
            "            \"type\": \"text\",",
            "            \"encrypted\": true,",
            "            \"required\": true,",
            "            \"help\": \"Enter the password for this account.\",",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"string\",",
            "                    \"minLength\": 1,",
            "                    \"maxLength\": 8192,",
            "                    \"errorMsg\": \"Length of password should be between 1 and 8192\"",
            "                }",
            "            ]",
            "        }",
            "    ]",
            "}"
        ]
    },
    "tab-proxy": {
        "prefix": "tab-proxy",
        "description": "Create a Proxy tab.",
        "body": [
            "{",
            "    \"name\": \"proxy\",",
            "    \"title\": \"Proxy\",",
            "    \"entity\": [",
            "        {",
            "            \"field\": \"proxy_enabled\",",
            "            \"label\": \"Enable\",",
            "            \"type\": \"checkbox\"",
            "        },",
            "        {",
            "            \"field\": \"proxy_url\",",
            "            \"label\": \"Host\",",
            "            \"type\": \"text\",",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"string\",",
            "                    \"minLength\": 0,",
            "                    \"maxLength\": 4096,",
            "                    \"errorMsg\": \"Max host length is 4096\"",
            "                }",
            "            ]",
            "        },",
            "        {",
            "            \"field\": \"proxy_port\",",
            "            \"label\": \"Port\",",
            "            \"type\": \"text\",",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"number\",",
            "                    \"range\": [",
            "                        1,",
            "                        65535",
            "                    ]",
            "                }",
            "            ]",
            "        },",
            "        {",
            "            \"field\": \"proxy_username\",",
            "            \"label\": \"Username\",",
            "            \"type\": \"text\",",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"string\",",
            "                    \"minLength\": 0,",
            "                    \"maxLength\": 50,",
            "                    \"errorMsg\": \"Max length of username is 50\"",
            "                }",
            "            ]",
            "        },",
            "        {",
            "            \"field\": \"proxy_password\",",
            "            \"label\": \"Password\",",
            "            \"type\": \"text\",",
            "            \"encrypted\": true,",
            "            \"validators\": [",
            "                {",
            "                    \"type\": \"string\",",
            "                    \"minLength\": 0,",
            "                    \"maxLength\": 8192,",
            "                    \"errorMsg\": \"Max length of password is 8192\"",
            "                }",
            "            ]",
            "        }",
            "    ],",
            "    \"options\": {",
            "        \"saveValidator\": \"function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }\"",
            "    }",
            "}"
        ]
    },
    "tab-logging": {
        "prefix": "tab-logging",
        "description": "Create a Logging tab.",
        "body": [
            "{",
            "    \"name\": \"logging\",",
            "    \"title\": \"Logging\",",
            "    \"entity\": [",
            "        {",
            "            \"field\": \"loglevel\",",
            "            \"label\": \"Log level\",",
            "            \"type\": \"singleSelect\",",
            "            \"options\": {",
            "                \"disableSearch\": true,",
            "                \"autoCompleteFields\": [",
            "                    {",
            "                        \"label\": \"DEBUG\",",
            "                        \"value\": \"DEBUG\"",
            "                    },",
            "                    {",
            "                        \"label\": \"INFO\",",
            "                        \"value\": \"INFO\"",
            "                    },",
            "                    {",
            "                        \"label\": \"WARNING\",",
            "                        \"value\": \"WARNING\"",
            "                    },",
            "                    {",
            "                        \"label\": \"ERROR\",",
            "                        \"value\": \"ERROR\"",
            "                    },",
            "                    {",
            "                        \"label\": \"CRITICAL\",",
            "                        \"value\": \"CRITICAL\"",
            "                    }",
            "                ]",
            "            },",
            "            \"defaultValue\": \"INFO\"",
            "        }",
            "    ]",
            "}"
        ]
    },
    "meta": {
        "description": "Create a meta section for globalConfig.json",
        "prefix": "meta",
        "body": [
            "\"meta\": {",
            "        \"name\": \"${1:name}\",",
            "        \"displayName\": \"${2:display name}\",",
            "        \"version\": \"${3:0.0.0}\",",
            "        \"apiVersion\": \"${4:0.0.0}\",",
            "        \"restRoot\": \"${5:rest_root}\"",
            "}"
        ]
    },
    "service": {
        "description": "globalConfig.json service (input)",
        "prefix": "service",
        "body": [
            "{",
            "    \"name\": \"${1:name}\",",
            "    \"title\": \"${2:Title}\",",
            "    \"entity\": [",
            "        $0",
            "    ]",
            "}"
        ]
    },
    "entity-text": {
        "description": "globalConfig.json text entity",
        "prefix": "entity-text",
        "body": [
            "{",
            "    \"type\": \"text\",",
            "    \"field\": \"${1:field_name}\",",
            "    \"label\": \"${2:Field label}\",",
            "    \"help\": \"${3:Help text}\",",
            "    \"required\": ${4|true,false|},",
            "    \"defaultValue\": \"${5:Default value}\",",
            "    \"validators\": [",
            "       $0",
            "    ],",
            "    \"options\": {",
            "        \"placeholder\": \"${10:Placeholder text}\"",
            "    }",
            "}"
        ]
    },
    "entity-checkbox": {
        "description": "globalConfig.json checkbox entity",
        "prefix": "entity-checkbox",
        "body": [
            "{",
            "    \"type\": \"checkbox\",",
            "    \"field\": \"${1:field_name}\",",
            "    \"label\": \"${2:Field label}\",",
            "    \"help\": \"${3:Help text}\",",
            "    \"required\": ${4|true,false|},",
            "    \"defaultValue\": ${5|true,false|}",
            "}"
        ]
    },
    "entity-radio": {
        "description": "globalConfig.json radio button entity",
        "prefix": "entity-radio",
        "body": [
            "{",
            "    \"type\": \"radio\",",
            "    \"field\": \"${1:field_name}\",",
            "    \"label\": \"${2:Field label}\",",
            "    \"help\": \"${3:Help text}\",",
            "    \"required\": ${4|true,false|},",
            "    \"defaultValue\": \"${5:item_value}\",",
            "    \"options\": {",
            "        \"items\": [",
            "           {",
            "               \"value\": \"${5:item_value}\",",
            "               \"label\": \"${7:Item Label}\"",
            "           }",
            "        ]",
            "    }",
            "}"
        ]
    },
    "entity-single-select": {
        "description": "globalConfig.json single select entity",
        "prefix": "entity-single-select",
        "body": [
            "{",
            "    \"type\": \"singleSelect\",",
            "    \"field\": \"${1:field_name}\",",
            "    \"label\": \"${2:Field label}\",",
            "    \"help\": \"${3:Help text}\",",
            "    \"required\": ${4|true,false|},",
            "    \"defaultValue\": \"${5:item_value}\",",
            "    \"options\": {",
            "       \"disableSearch\": ${6|true,false|},",
            "        \"autoCompleteFields\": [",
            "           {",
            "               \"value\": \"${5:item_value}\",",
            "               \"label\": \"${7:Item Label}\"",
            "           }",
            "        ]",
            "    }",
            "}"
        ]
    },
    "entity-multi-select": {
        "description": "globalConfig.json multiple select entity",
        "prefix": "entity-multi-select",
        "body": [
            "{",
            "    \"type\": \"multipleSelect\",",
            "    \"field\": \"${1:field_name}\",",
            "    \"label\": \"${2:Field label}\",",
            "    \"help\": \"${3:Help text}\",",
            "    \"required\": ${4|true,false|},",
            "    \"defaultValue\": \"${5:item_value}\",",
            "    \"options\": {",
            "       \"delimiter\": \"${6:|}\",",
            "        \"items\": [",
            "           {",
            "               \"value\": \"${5:item_value}\",",
            "               \"label\": \"${7:Item Label}\"",
            "           }",
            "        ]",
            "    }",
            "}"
        ]
    },
    "entity-help-link": {
        "description": "globalConfig.json help link entity",
        "prefix": "entity-help-link",
        "body": [
            "{",
            "    \"type\": \"helpLink\",",
            "    \"field\": \"${1:field_name}\",",
            "    \"label\": \"\",",
            "    \"options\": {",
            "       \"text\":\"${2:Link text}\",",
            "       \"link\":\"${3:https://example.com}\"",
            "    }",
            "}"
        ]
    },
    "validator-string": {
        "description": "globalConfig.json string validator",
        "prefix": "validator-string",
        "body": [
            "{",
            "    \"type\": \"string\",",
            "    \"errorMsg\": \"${1:Length of ID should be between 1 and 8192}\",",
            "    \"minLength\": ${2:1},",
            "    \"maxLength\": ${3:8192}",
            "}"
        ]
    },
    "validator-regex": {
        "description": "globalConfig.json regex validator",
        "prefix": "validator-regex",
        "body": [
            "{",
            "    \"type\": \"regex\",",
            "    \"errorMsg\": \"${1:Value must begin with a letter and consist exclusively of alphanumeric characters and underscores.}\",",
            "    \"pattern\": \"${2:^[a-zA-Z]\\\\\\w*$}\"",
            "}"
        ]
    },
    "validator-number": {
        "description": "globalConfig.json number validator",
        "prefix": "validator-number",
        "body": [
            "{",
            "    \"type\": \"number\",",
            "    \"errorMsg\": \"${1:Input must a number.}\",",
            "    \"range\": [${2:}]",
            "}"
        ]
    },
    "validator-date": {
        "description": "globalConfig.json date validator",
        "prefix": "validator-date",
        "body": [
            "{",
            "    \"type\": \"date\",",
            "    \"errorMsg\": \"${1:Input must a date.}\"",
            "}"
        ]
    },
    "validator-email": {
        "description": "globalConfig.json email validator",
        "prefix": "validator-email",
        "body": [
            "{",
            "    \"type\": \"email\",",
            "    \"errorMsg\": \"${1:Input must an email.}\"",
            "}"
        ]
    },
    "validator-ipv4": {
        "description": "globalConfig.json ipv4 validator",
        "prefix": "validator-ipv4",
        "body": [
            "{",
            "    \"type\": \"ipv4\",",
            "    \"errorMsg\": \"${1:Input must an IP v4 address.}\"",
            "}"
        ]
    },
    "validator-url": {
        "description": "globalConfig.json url validator",
        "prefix": "validator-url",
        "body": [
            "{",
            "    \"type\": \"url\",",
            "    \"errorMsg\": \"${1:Input must an URL address.}\"",
            "}"
        ]
    }
}

